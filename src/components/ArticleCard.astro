---
interface Props {
  title: string;
  excerpt?: string;
  author?: {
    name: string;
    role: string;
    image?: string;
  };
  date?: Date;
  image?: string;
  category?: string;
  size?: 'large' | 'medium' | 'small';
}

const { 
  title, 
  excerpt, 
  author, 
  date, 
  image, 
  category,
  size = 'medium' 
} = Astro.props;
---

<article class={`article article--${size}`}>
  {image && (
    <figure class="article-img">
      <img src={image} alt={title} />
    </figure>
  )}
  
  {category && (
    <div class="article-category">
      <span>{category}</span>
    </div>
  )}

  <h2 class={`article-title article-title--${size}`}>
    <a href="#" class="article-link">{title}</a>
  </h2>
  
  {excerpt && (
    <div class="article-excerpt">
      <p>{excerpt}</p>
    </div>
  )}

  {author && (
    <div class="article-author">
      {author.image && (
        <div class="article-author-img">
          <img src={author.image} alt={author.name} />
        </div>
      )}
      <div class="article-author-info">
        <dl>
          <dt>{author.name}</dt>
          <dd>{author.role}</dd>
        </dl>
      </div>
    </div>
  )}
</article>

<style>
.article {
  & + .article {
    padding-top: 2rem;
    margin-top: 2rem;
    border-top: 1px solid #ccc;
  }
}

.article-img {
  margin-bottom: 1rem;
}

.article-category {
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.article-title {
  font-family: "Fraunces", serif;
  font-weight: 900;
  line-height: 1.25;
  margin-bottom: 1rem;
}

.article-title--large {
  font-size: 2rem;
}

.article-title--medium {
  font-size: 1.5rem;
}

.article-title--small {
  font-size: 1.25rem;
}

.article-link {
  color: inherit;
  text-decoration: none;
}

.article-excerpt {
  font-size: 1.125rem;
  line-height: 1.4;
  margin-bottom: 1.5rem;
}

.article-author {
  display: flex;
  align-items: center;
}

.article-author-img {
  width: 3rem;
  height: 3rem;
  border-radius: 12px;
  overflow: hidden;
  margin-right: 0.5rem;
}

.article-author-info {
  line-height: 1.375;
  
  dt {
    font-weight: 600;
  }
  
  dd {
    font-size: 0.875em;
    color: #666;
  }
}
</style>