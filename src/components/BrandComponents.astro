---
interface Props {
  category: string;
}

const { category } = Astro.props;
---

<span class="category-tag">{category}</span>

<style>
.category-tag {
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-primary);
}
</style>