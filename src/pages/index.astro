---
import Layout from '../layouts/layout.astro';
import ArticleCard from '../components/ArticleCard.astro';

// Questi dati andranno poi spostati in file .md o in un CMS
const editorial = {
  title: "Il ritorno del verde: la crescita dei boschi in Italia",
  excerpt: "Nell'ultimo secolo, l'Italia ha vissuto una significativa crescita dei suoi boschi, con profonde implicazioni per l'ambiente e l'economia.",
  author: {
    name: "Mario Rossi",
    role: "Editorialista",
    image: "/authors/mario-rossi.jpg"
  },
  date: new Date("2024-07-03")
};

const featuredNews = {
  title: "Successo per il progetto di reintroduzione del gallo cedrone sulle Alpi Orobie",
  category: "In evidenza",
  author: {
    name: "Staff Vita nei Boschi",
    role: "Redazione"
  },
  date: new Date("2024-04-04")
};
---

<Layout title="Home">
  <div class="column editorial">
    <section class="section-editorial">
      <ArticleCard 
        size="large"
        {...editorial}
      />
    </section>
    
    <section class="section-featured">
      <ArticleCard 
        size="medium"
        {...featuredNews}
      />
    </section>
  </div>

  <!-- Le altre colonne per ora le lasciamo vuote -->
  <div class="column reports">
  </div>
  <div class="column excursions">
  </div>
  <div class="column multimedia">
  </div>
</Layout>

<style>
.section-title {
  font-family: "Fraunces", serif;
  font-weight: 700;
  font-size: 1.25rem;
  margin-bottom: 1.5rem;
}

.section-editorial,
.section-featured,
.section-reports,
.section-news,
.section-excursions,
.section-multimedia {
  margin-bottom: 3rem;
}
</style>